<% 
  pg_config = @pg.user_config || {}
  pgbouncer_config = @pg.pgbouncer_user_config || {}
%>

<div class="min-w-2/3 pg-config">
    <%== part("components/pg_config_card", title: "PostgreSQL Configuration", config: pg_config, extra_class: "pg-config-card") %>
    <%== part("components/pg_config_card", title: "PgBouncer Configuration", config: pgbouncer_config, extra_class: "pgbouncer-config-card") %>
    <div class="flex justify-end">
        <% if @edit_perm %>
            <%== part("components/button", text: "Save", extra_class: "save-config-btn") %>
        <% end %>
    </div>
</div>
